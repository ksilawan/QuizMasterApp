<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayGrades">

    <TextView
        android:id="@+id/titleGrades"
        android:layout_width="188dp"
        android:layout_height="40dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="176dp"
        android:text="TERM GRADE"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/idNo1"
        android:layout_width="223dp"
        android:layout_height="49dp"
        android:text="ID NO. : 1820345 "
        android:textSize="18sp"
        android:translationX="80dp"
        android:translationY="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/studentname1"
        android:layout_width="225dp"
        android:layout_height="57dp"
        android:text="Name: Lanz Montelibano"
        android:textSize="18sp"
        android:translationX="80dp"
        android:translationY="-30dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/course1"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:text="Course: CSP215 "
        android:textSize="18sp"
        android:translationX="80dp"
        android:translationY="-110dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="290dp" />

    <TextView
        android:id="@+id/finalGrade"
        android:layout_width="166dp"
        android:layout_height="52dp"
        android:text="Final Grade: "
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="317dp" />
</androidx.constraintlayout.widget.ConstraintLayout>